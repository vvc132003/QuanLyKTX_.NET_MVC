@model List<QuanLyKyTucXa_MVC.Models.Modeldata>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<div class="skin-default-dark fixed-layout">
    <div id="main-wrapper">
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="room-container">
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var boPhan in Model)
                        {
                            <div id="table" style="background-color: #ffbc00" class="room-box">
                                <i class="fa fa-window-restore fa-5x text-white" aria-hidden="true"></i>
                                <p>@boPhan.boPhans.tenbophan</p>
                                <a href="@boPhan.boPhans.id" class="text-white">Xem thêm</a>
                                <ul class="nav">
                                    @foreach (var nhanVien in boPhan.nhanViens)
                                    {
                                        <li class="nav-item">
                                            <img title="@nhanVien.hovaten" src="@nhanVien.image"
                                                 alt="">
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0.5);
    }

    .room-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        cursor: pointer;
    }

    .room-box {
        width: 280px;
        height: 250px;
        border: 1px solid #ccc;
        padding: 20px;
        cursor: pointer;
        border-radius: 10px;
        transition: all 0.3s ease;
    }


        .room-box:hover {
            transform: translateY(-5px);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.1);
        }

    #table {
        position: relative;
        width: 380px;
        height: 160px;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-family: Arial, sans-serif;
        cursor: pointer;
        display: inline-block;
        margin: 10px;
        transform: skew(-10deg);
    }

        #table p {
            color: white;
            font-size: 24px;
            font-weight: bold;
            text-transform: uppercase;
            margin-bottom: 10px;
        }

        #table a {
            color: white;
            text-decoration: none;
            display: inline-block;
            margin-bottom: 15px;
            font-size: 16px;
            transition: color 0.3s ease;
        }

            #table a:hover {
                color: #f0f0f0;
            }

    .nav {
        display: flex;
        gap: 15px;
        position: absolute;
        bottom: 20px;
        left: 55%;
        transform: translateX(-50%);
        background-color: rgba(255, 255, 255, 0.9);
        padding: 10px;
        border-radius: 50%;
    }

        .nav img {
            border-radius: 50%;
            width: 40px;
            height: 40px;
            border: 2px solid #fff;
            transition: border-color 0.3s ease;
        }

            .nav img:hover {
                border-color: #ff9700;
            }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@2.9.3/dist/umd/popper.min.js"></script>
