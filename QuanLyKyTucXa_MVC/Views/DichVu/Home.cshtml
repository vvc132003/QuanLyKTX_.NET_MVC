@model List<QuanLyKyTucXa_MVC.Models.Modeldata>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel='stylesheet'
      href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css'>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
<link href="/static/morris.css" rel="stylesheet" />
<link href="/static/c3.min.css" rel="stylesheet" />
<link href="/static/home.css" rel="stylesheet" />
<link href="/static/dashboard1.css" rel="stylesheet" />
<link href="/static/style.css" rel="stylesheet" />
<div class="skin-default-dark fixed-layout">
    <div id="main-wrapper">
        @Html.Partial("~/Views/layout/navbar.cshtml")
        @Html.Partial("~/Views/layout/header.cshtml")
        <br />
        <div class="page-wrapper">
            <div class="container-fluid">
                <div class="d-flex justify-content-between">
                    <a href="" class="btn btn-primary mb-4 ml-auto" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <i class="fas fa-plus"></i>
                        Thêm dịch vụ
                    </a>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body">
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th>ID</th>
                                                <th>Tên dịch vụ</th>
                                                <th>Mô tả</th>
                                                <th>Gía tiền</th>
                                                <th>Số lượng còn</th>
                                                <th>Ngày thêm</th>
                                                <th>Trạng thái</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @if (Model != null && Model.Count > 0)
                                            {
                                                int count = 1;
                                                foreach (var dichVu in Model)
                                                {
                                                    <tr id="row-@count">
                                                        <td>@count</td>
                                                        <td>@dichVu.dichVu.tendichvu</td>
                                                        <td>@dichVu.dichVu.mota</td>
                                                        <td>@dichVu.dichVu.giatien</td>
                                                        <td>@dichVu.dichVu.soluongcon</td>
                                                        <td>@dichVu.dichVu.ngaythem</td>
                                                        <td>@dichVu.dichVu.trangthai</td>
                                                        <td>
                                                            <a href="/DichVu/XoaDichVu/@dichVu.dichVu.id" class="btn btn-danger" title="Xoá">
                                                                <i class="fas fa-times-circle"></i>
                                                            </a>
                                                            <a href="/KyLuat/HuyKyLuat/@dichVu.dichVu.id" class="btn btn-warning" title="Cập nhât">
                                                                <i class="fas fa-check-circle"></i>
                                                            </a>
                                                        </td>
                                                    </tr>
                                                    count++;
                                                }
                                            }
                                            else
                                            {
                                                <tr>
                                                    <td colspan="5">Không có dịch vụ!.</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
     data-bs-backdrop="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
            </div>
            <div class="modal-body text-left">
                <div class="text-bg-success p-2">Thông tin dịch vụ</div>
                <div class="border border-secondary-subtle" style="padding:10px 20px">
                    <form method="post" action="/DichVu/ThemDichVu">
                        <div class="mb-3">
                            <label for="tendichvu" class="form-label">Tên dịch vụ:</label>
                            <input type="text" name="tendichvu" id="tendichvu" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="mota" class="form-label">Mô tả:</label>
                            <input type="text" name="mota" id="mota" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="giatien" class="form-label">Gía tiền:</label>
                            <input type="number" name="giatien" id="giatien" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="soluongcon" class="form-label">Số lượng còn:</label>
                            <input type="number" name="soluongcon" id="soluongcon" class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label for="ngaythem" class="form-label">Ngày thêm:</label>
                            <input type="datetime-local" name="ngaythem" id="ngaythem" class="form-control" />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary custom-btn-secondary" data-dismiss="modal">
                                Huỷ
                            </button>
                            <input type="submit" value="Thêm dịch vụ" class="btn btn-primary custom-button" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .modal-backdrop {
        background-color: rgba(0, 0, 0, 0);
    }
</style>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@2.9.3/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
        crossorigin="anonymous"></script>
